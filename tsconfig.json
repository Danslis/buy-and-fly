/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "es2020",
    "moduleResolution": "node",
    "useDefineForClassFields": false,
    "lib": ["ES2022", "dom"],
    "baseUrl": ".",
    "paths": {
      "@baf/search/common": ["src/app/search/common/index.ts"],
      "@baf/core": ["src/app/core/index.ts"],
      "@baf/home/page": ["src/app/home/page/index.ts"],
      "@baf/search/page": ["src/app/search/page/index.ts"],
      "@baf/search/ui/form": ["src/app/search/ui/form/index.ts"],
      "@baf/search/ui/tabs": ["src/app/search/ui/tabs/index.ts"],
      "@baf/ui/buttons": ["src/app/ui/buttons/index.ts"],
      "@baf/ui/autocomplete": ["src/app/ui/autocomplete/index.ts"],
      "@baf/ui/container": ["src/app/ui/container/index.ts"],
      "@baf/ui/icons": ["src/app/ui/icons/index.ts"],
      "@baf/ui/layout": ["src/app/ui/layout/index.ts"],
      "@baf/ui/nav": ["src/app/ui/nav/index.ts"],
      "@baf/ui/title": ["src/app/ui/title/index.ts"],
      "@baf/ui/utils": ["src/app/ui/utils/index.ts"],
      "@baf/ui/input": ["src/app/ui/input/index.ts"],
      "@baf/ui/datepicker": ["src/app/ui/datepicker/index.ts"],
      "@baf/ui/headline": ["src/app/ui/headline/index.ts"],
      "@baf/ui/label": ["src/app/ui/label/index.ts"],
      "@baf/search/services": ["src/app/search/services/index.ts"],
      "@baf/search/ui/fields": ["src/app/search/ui/fields/index.ts"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true
  },
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ]
}
